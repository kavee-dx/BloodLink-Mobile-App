<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffe9e8"
    android:gravity="center">

    <!-- Home Active -->
    <!-- Home (default inactive now) -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffe9e8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/nav_home"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/text_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="@string/nav_home"
            android:textColor="#607d8b"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Transfers -->
    <LinearLayout
        android:id="@+id/nav_transfers"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffe9e8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:contentDescription="@string/nav_transfers"
            android:src="@drawable/transfer" />


        <TextView
            android:id="@+id/text_transfers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="@string/nav_transfers"
            android:textColor="#607d8b"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Tips -->
    <LinearLayout
        android:id="@+id/nav_tips"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffe9e8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/nav_tips"
            android:src="@drawable/book" />

        <TextView
            android:id="@+id/text_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="@string/nav_tips"
            android:textColor="#607d8b"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Goals -->
    <LinearLayout
        android:id="@+id/nav_goals"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffe9e8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/nav_goals"
            android:src="@drawable/goals" />

        <TextView
            android:id="@+id/text_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="@string/nav_goals"
            android:textColor="#607d8b"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Profile -->
    <LinearLayout
        android:id="@+id/nav_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffe9e8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/nav_profile"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/text_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="@string/nav_profile"
            android:textColor="#607d8b"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
